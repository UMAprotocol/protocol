    "@openzeppelin/contracts": "3.0.0",
    "@uma/financial-templates-lib": "^1.2.0",
    "bip39": "^3.0.2",
    "chai": "^4.2.0",
    "coveralls": "^3.1.0",
    "ethereumjs-wallet": "^1.0.0",
