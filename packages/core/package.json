    "moment": "^2.24.0",
    "node-fetch": "^2.3.0",
    "solidity-coverage": "^0.7.2",
    "truffle": "^5.1.16",
    "truffle-assertions": "^0.9.2",
    "truffle-deploy-registry": "^0.5.1",
    "web3": "1.2.11",
