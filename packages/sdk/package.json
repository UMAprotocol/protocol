{
  "version": "0.5.0",
  "license": "MIT",
  "name": "@uma/sdk",
  "author": "David Adams",
  "main": "dist/node/index.js",
  "module": "dist/web/index.js",
  "typings": "dist/types/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "node ./build.js",
    "build:web": "ENV_TYPE=web tsdx build --target web --format esm --name index",
    "build:node": "tsdx build --target node --format cjs --name index",
    "test": "tsdx test",
    "test:e2e": "tsdx test --config jest-e2e-config.json",
    "test:watch": "tsdx test --watch",
    "eslint": "eslint './src/**/*.ts'",
    "prettier": "prettier './**/*.md' './src/**/*.ts'",
    "lint": "yarn prettier --write && yarn eslint --fix",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "size-limit": [
    {
      "path": "dist/sdk.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/sdk.esm.js",
      "limit": "10 KB"
    }
  ],
  "dependencies": {
    "@uma/contracts-frontend": "^0.1.1",
    "@uma/contracts-node": "^0.1.1",
    "axios": "^0.21.4",
    "highland": "^2.13.5",
    "lodash-es": "^4.17.21"
  },
  "peerDependencies": {
    "ethers": "^5.4.2"
  },
  "devDependencies": {
    "@rollup/plugin-replace": "^3.0.0",
    "@size-limit/preset-small-lib": "^4.10.2",
    "@types/dotenv": "^8.2.0",
    "@types/highland": "^2.12.13",
    "dotenv": "^10.0.0",
    "size-limit": "^4.10.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.2.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.com/",
    "access": "public"
  }
}
